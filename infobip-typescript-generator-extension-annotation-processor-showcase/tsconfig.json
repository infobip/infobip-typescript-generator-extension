{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
  },
  "include": [
    "./lib/**.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
